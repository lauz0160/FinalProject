<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageLayoutImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/nasa_images"
        android:src="@drawable/thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageLayoutImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/imageLayoutImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imageLayoutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/date_goes_here"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/imageLayoutLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/latitude_goes_here"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/imageLayoutLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/longitude_goes_here"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>